<h1>Nuevo Producto</h1>
<div class="container">
  <%= simple_form_for [@client, @product] do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :disfraz, autofocus: true, label: "Disfraz" %>
        <%= f.input :agregado, label: "Agregado" %>
        <%= f.input :valor, label: "Valor" %>
      </div>
      <div class="col-md-6">
        <%= f.input :garantia, label: "GarantÃ­a" %>
        <%= f.input :init_date, label: "Fecha de inicio", order: [:day, :month, :year], html5: true %>
        <%= f.input :end_date, label: "Fecha de fin", order: [:day, :month, :year], html5: true %>
        <%= f.select :estado, Product::ESTADO, include_blank: true %>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit class: "btn btn-success mb-2 mt-2" %>
    </div>
  <% end %>
</div>
<%= form_with model: [@client, @product], id: dom_id(@product, "form"), class: "table min-w-full" do |form| %>
  <div>
    <%= form.text_field :disfraz, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:disfraz, @product) %>
  </div>
  <div>
    <%= form.text_field :agregado, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:agregado, @product) %>
  </div>
  <div>
    <%= form.text_field :valor, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:valor, @product) %>
  </div>
  <div>
    <%= form.text_field :garantia, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:garantia, @product) %>
  </div>
  <div>
    <%= form.date_field :init_date, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full datefield" %>
    <%= inline_error_for(:init_date, @product) %>
  </div>
  <div>
    <%= form.date_field :end_date, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full datefield" %>
    <%= inline_error_for(:end_date, @product) %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
