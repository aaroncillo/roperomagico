<h1>Clientes Morosos</h1>
<%= turbo_frame_tag "modal" %>
<div class="container">
  <% @morosos_by_client.each do |client, morosos_products| %>
    <h2><%= client.name %> (Moroso)</h2>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Disfraz</th>
          <th scope="col">Agregado</th>
          <th scope="col">Valor</th>
          <th scope="col">Garantía</th>
          <th scope="col">Fecha de inicio</th>
          <th scope="col">Fecha de fin</th>
          <th scope="col">Estado</th>
          <th scope="col">Acción</th>
        </tr>
      </thead>
      <tbody>
        <% morosos_products.each do |p| %>
          <tr>
            <td><%= p.disfraz %></td>
            <td><%= p.agregado %></td>
            <td><%= p.valor %></td>
            <td><%= p.garantia %></td>
            <td><%= p.init_date %></td>
            <td><%= p.end_date %></td>
            <td><%= p.estado %></td>
            <td class="text-center">
              <%= link_to edit_product_path(p, company_id: client.company_id), class:"btn btn-primary", data: { turbo_frame: 'modal' } do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
